{
  "name": "rollup-plugin-jsonlint",
  "version": "0.0.1",
  "description": "Converts .json (JSON/CJSON/JSON5) files to ES6 modules.",
  "author": "Ferdinand Prantl <prantlf@gmail.com> (http://prantl.tk)",
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/prantlf/rollup-plugin-jsonlint/blob/master/LICENSE"
    }
  ],
  "homepage": "http://prantlf.github.com/rollup-plugin-jsonlint/",
  "repository": {
    "type": "git",
    "url": "https://github.com/prantlf/rollup-plugin-jsonlint.git"
  },
  "bugs": {
    "url": "http://github.com/prantlf/rollup-plugin-jsonlint/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "typings": "index.d.ts",
  "files": [
    "dist",
    "index.d.ts"
  ],
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "rollup -c",
    "lint": "npm run lint:js && npm run lint:ts",
    "lint:js": "eslint --fix src test util",
    "lint:ts": "eslint -c .tslintrc.yml --fix '*.ts' 'test/*.ts'",
    "test": "c8 ava --no-worker-threads",
    "pretest": "tsc index.d.ts test/types.ts --noEmit",
    "posttest": "npm run lint"
  },
  "ava": {
    "files": [
      "!**/fixtures/**",
      "!**/helpers/**",
      "!**/recipes/**",
      "!**/types.ts",
      "!**/util/**"
    ]
  },
  "c8": {
    "exclude": [
      "test/**",
      "util/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "@prantlf/jsonlint": "11.6.0",
    "rollup-pluginutils": "2.8.2"
  },
  "devDependencies": {
    "@types/node": "17.0.31",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "ava": "4.2.0",
    "c8": "7.11.2",
    "eslint": "8.14.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.2.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-standard": "4.1.0",
    "rollup": "2.71.1",
    "rollup-plugin-buble": "0.19.8",
    "rollup-plugin-node-resolve": "5.2.0",
    "source-map-support": "0.5.21",
    "typescript": "4.6.4"
  },
  "peerDependencies": {
    "rollup": "2.71.1"
  },
  "keywords": [
    "rollup",
    "plugin",
    "rollup-plugin",
    "json",
    "jsonlint",
    "es2015",
    "npm",
    "modules"
  ]
}
